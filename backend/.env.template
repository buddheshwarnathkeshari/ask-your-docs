# =======================================================================
#                  .env.template - Ask Your Docs RAG System
# Instructions: Copy this file to .env and fill in the required values.
# Hostnames below (postgres, redis, qdrant) should match your 
# docker-compose service names.
# =======================================================================

# --- POSTGRES CONFIGURATION ---
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=askyourdocs
POSTGRES_USER=dbuser
POSTGRES_PASSWORD=dbpassword

# --- REDIS/CELERY CONFIGURATION ---
REDIS_HOST=redis
REDIS_PORT=6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# --- QDRANT CONFIGURATION ---
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION_NAME=rag_documents

# --- GEMINI/LLM CONFIGURATION (REQUIRED) ---
GEMINI_API_KEY=<YOUR_GEMINI_API_KEY>
GEMINI_API_URL=https://api.gemini.google.com/v1
GEMINI_EMBED_MODEL=text-embedding-004
GEMINI_LLM_MODEL=gemini-2.5-flash

# --- SYSTEM PARAMETERS ---
EMBED_DIM=768
